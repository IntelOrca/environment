{
    // Theming
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "One Dark Pro",
    "material-icon-theme.folders.color": "#90a4ae",

    // Shell
    "extensions.ignoreRecommendations": true,
    "window.titleBarStyle": "custom",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.autoSave": "off",
    "window.restoreWindows": "none",

    // Editor
    "window.zoomLevel": 0,
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.shell.windows": "pwsh-preview.cmd",
    "terminal.integrated.shellArgs.windows": ["-nologo"],
    "terminal.integrated.windowsEnableConpty": true,
    "editor.fontSize": 16,
    "editor.renderIndentGuides": false,
    "editor.renderWhitespace": "all",
    "editor.mouseWheelZoom": true,
    "diffEditor.ignoreTrimWhitespace": true,
    "diffEditor.renderSideBySide": false,

    // Language configuration
    "[javascript]": {
        "editor.fontFamily": "Fira Code",
        "editor.fontLigatures": true
    },
    "[javascriptreact]": {
        "editor.fontFamily": "Fira Code",
        "editor.fontLigatures": true
    },
    "[fsharp]": {
        "editor.fontFamily": "Fira Code",
        "editor.fontLigatures": true,
        "editor.renderIndentGuides": true,
        "editor.renderWhitespace": "none"
    },
    "files.associations": {
        "*.cblproj": "xml",
        "*.schedule": "ini"
    },

    "material-icon-theme.folders.associations": {
        ".vs": "vscode",
        "bin": "other",
        "cpy": "include"
    },
    "material-icon-theme.files.associations": {
        "*.cbl": "c",
        "*.cpy": "c",
        "*.cob": "c"
    },

    // Extensions
    "editor.tokenColorCustomizations": {
        "[One Dark Pro]": {
            "textMateRules": [
                {
                    "scope": "keyword.operator.cobol",
                    "settings": {
                        "foreground": "#56b6c2"
                    }
                }
            ],
        }
    },
    "cSpell.language": "en-GB",
    "cSpell.enabledLanguageIds": [
        "latex",
        "markdown",
        "restructuredtext",
        "text"
    ],
    "omnisharp.projectLoadTimeout": 300,
    "git.enableSmartCommit": true,
    "gitlens.keymap": "alternate",
    "material-icon-theme.showUpdateMessage": false,
    "powershell.startAutomatically": false,

    "[COBOL]": {
        "editor.rulers": [6, 7, 11, 72]
    },
    "coboleditor.cblformatPath": "G:/svn/commonide/formatting/bin.net/cblformat.exe"
}